pipeline {
    agent {
        label 'dockernode'   // Make sure your Jenkins node has Docker installed
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')   // Jenkins credentials ID
        DOCKER_IMAGE = "kolakavya/spring-petclinic:latest"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out source code...'
                git branch: 'main', url: 'https://github.com/kavyakola630-boop/spring-petclinic.git'
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ğŸ”§ Building the application with Maven...'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Create Dockerfile') {
            steps {
                echo 'ğŸ› ï¸ Creating Dockerfile dynamically...'
                writeFile file: 'Dockerfile', text: '''
                FROM eclipse-temurin:17-jdk-jammy
                WORKDIR /app
                COPY target/*.jar app.jar
                EXPOSE 8080
                ENTRYPOINT ["java", "-jar", "app.jar"]
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                echo 'ğŸ“¦ Pushing image to Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'docker_hub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }

        stage('Remove Existing Container (if any)') {
            steps {
                echo 'ğŸ§¹ Removing any existing container...'
                sh '''
                    docker rm -f petclinic || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                echo 'ğŸš€ Running new container...'
                sh 'docker run -d -p 8080:8080 --name petclinic $DOCKER_IMAGE'
            }
        }

        stage('Check Running Containers') {
            steps {
                echo 'ğŸ” Checking running containers...'
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline executed successfully! Spring Petclinic is running in Docker.'
        }
        failure {
            echo 'âŒ Pipeline failed â€” check Jenkins console logs for details.'
        }
        always {
            echo 'ğŸ§¾ Build completed (success or fail).'
        }
    }
}
