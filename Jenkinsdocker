pipeline {
    agent any

    environment {
        // ğŸ”§ Docker Hub configuration
        DOCKER_USER = 'kolakavya'
        DOCKER_IMAGE = "${DOCKER_USER}/spring-petclinic"
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out code from GitHub...'
                git branch: 'main', url: 'https://github.com/kavyakola630-boop/spring-petclinic.git'
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'ğŸ—ï¸ Building Spring Boot project using Maven...'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Create Dockerfile') {
            steps {
                echo 'ğŸ› ï¸ Creating Dockerfile dynamically...'
                writeFile file: 'Dockerfile', text: '''
                FROM openjdk:17-jdk-slim
                WORKDIR /app
                COPY target/*.jar app.jar
                EXPOSE 8080
                ENTRYPOINT ["java", "-jar", "app.jar"]
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                sh '''
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    docker images | grep spring-petclinic
                '''
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                echo 'ğŸ“¦ Pushing image to Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    '''
                }
            }
        }

        stage('Remove Existing Container (if any)') {
            steps {
                echo 'ğŸ§¹ Removing old container if exists...'
                sh '''
                    docker rm -f spring-petclinic || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                echo 'ğŸš€ Running new Docker container...'
                sh '''
                    docker run -d --name spring-petclinic -p 8080:8080 ${DOCKER_IMAGE}:${DOCKER_TAG}
                '''
            }
        }

        stage('Check Running Containers') {
            steps {
                echo 'ğŸ” Checking running containers...'
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline executed successfully! Application is now running inside Docker.'
        }
        failure {
            echo 'âŒ Pipeline failed â€” check Jenkins console logs for details.'
        }
    }
}
