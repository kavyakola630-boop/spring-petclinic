pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'kavyakola630/spring-petclinic' // Change to your Docker Hub repo name
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/kavyakola630-boop/spring-petclinic.git'
            }
        }

        stage('Verify Dockerfile') {
            steps {
                script {
                    echo 'üîç Checking if Dockerfile exists...'
                    // Verify Dockerfile presence
                    sh '''
                        if [ ! -f Dockerfile ]; then
                            echo "‚ùå ERROR: Dockerfile not found in workspace!"
                            exit 1
                        fi
                        echo "‚úÖ Dockerfile found!"
                        head -10 Dockerfile || true
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE:latest .'
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push $DOCKER_IMAGE:latest
                            docker logout
                        '''
                    }
                }
            }
        }

        stage('Remove Existing Container (if any)') {
            steps {
                sh '''
                    docker ps -aq --filter "name=petclinic" | xargs -r docker rm -f || true
                '''
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8080:8080 --name petclinic $DOCKER_IMAGE:latest'
            }
        }

        stage('Check Running Containers') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Docker image built, pushed, and container running successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check logs for details.'
        }
    }
}
